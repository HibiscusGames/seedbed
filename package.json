{
	"name": "wrapp",
	"type": "module",
	"scripts": {
		"commit": "git-cz",
		"spellcheck": "cspell --config .config/.cspell.json ."
	},
	"devDependencies": {
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@commitlint/cz-commitlint": "^19.6.1",
		"@commitlint/format": "^19.5.0",
		"@commitlint/types": "^19.5.0",
		"@types/bun": "1.2.4",
		"@typescript-eslint/parser": "^8.24.0",
		"commitizen": "^4.3.1",
		"commitlint": "^19.7.1",
		"cspell": "^8.17.5",
		"prettier": "^3.5.1"
	},
	"peerDependencies": {
		"typescript": "^5.0.0",
		"inquirer": "^12.5.0"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "none",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "avoid",
		"proseWrap": "preserve",
		"endOfLine": "lf",
		"printWidth": 160
	}
}